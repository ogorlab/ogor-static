---
import { useI18n } from "@/i18n";

const { t } = useI18n(Astro.currentLocale);

const social = [
  {
    name: "Facebook",
    url: "https://www.facebook.com/ogor.ro",
    icon: "/icon_facebook.svg",
  },
  {
    name: "YouTube",
    url: "https://www.youtube.com/channel/UCyJXrLqqYUTwTaEC2FtKUDg",
    icon: "/icon_facebook.svg",
    // icon: "",
  },
  {
    name: "LinkedIn",
    url: "https://www.linkedin.com/company/ogor/",
    icon: "/icon_facebook.svg",
    // icon: "",
  },
];
---

<footer class="grid">
  <div class="inner-footer">
    <a href="/" class="ogor-logo">
      <svg viewBox="0 0 960 384" height="64">
        <use href="/logos/ogor.svg#logo" width="384"></use>
        <use href="/logos/ogor.svg#logotype" x="320" y="64"></use>
      </svg>
    </a>

    <div class="contact">
      {/* TODO: add a phone format to i18next */}
      <div>üìû <a href={"tel:" + t("company.phone").replaceAll(/[^+|^0-9.]/g, "")} class="inline-block">{t("company.phone")}</a></div>
      <div>‚úâÔ∏è <a href={"mailto:" + t("company.email")} class="inline-block">{t("company.email")}</a></div>
      <span class="inline-block social-media">
        {
          social.map((platform) => (
            <a href={platform.url} title={platform.name} rel="external">
              <img src={platform.icon} alt="Icon" />
              {/* {platform.name} */}
            </a>
          ))
        }
      </span>
    </div>

    <div class="about">
      <h4>{t("company.tagline")}</h4>
      <p>{t("company.description")}</p>
    </div>
    <hr />
    <ul class="more">
      <li><a href="">Prezentarea companiei</a></li>
      <li><a href="">Produsele noastre</a></li>
      <li><a href="">NoutƒÉ»õi</a></li>
      <li><a href="">CreeazƒÉ cont OGOR&nbsp;‚Üí</a></li>
    </ul>

    <ul class="legal">
      <li><a href="https://anpc.ro/" rel="external nofollow">ANPC</a></li>
      <li><a href="/legal#terms">{t("legal.terms")}</a></li>
      <li><a href="/legal#privacy">{t("legal.privacy")}</a></li>
      <li><a href="/legal#cookie">{t("legal.cookie")}</a></li>
    </ul>

    <div class="ogor-details">
      <address>
        {t("company.name")}
        <br />
        {t("company.cui")}
        <br />
        {t("company.address")}
      </address>
    </div>
  </div>
</footer>


<style>
  footer {
    padding: 2rem;
    background: lavender;
    line-height: 1.5;
    --max-width: 56rem;
  }

  .inner-footer {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    grid-template-rows: auto;
    gap: 2em;
    width: 100%;
    max-width: var(--max-width);
    margin: auto;
  }

  .ogor-logo {
    grid-row: 1;
    grid-column: 1;
  }

  .contact {
    grid-row: 1;
    grid-column: 1 / 4;
    display: flex;
    justify-content: flex-end;
    align-items: center;
    gap: 1em;
  }

  .social-media {
    display: contents;
  }
  .social-media a {
    margin: 0;
  }

  .about {
    grid-row: 2;
    grid-column: 1 / 3;
  }

  .more {
    grid-row: 3;
    grid-column: 1 / 2;
    margin: 0;
    font-weight: 600;
  }

  .legal {
    list-style: none;
    text-align: right;
    grid-row: 3;
    margin: 0;
    grid-column: 2 / 3;
    height: 100%;
    padding: 0;
  }

  .ogor-details {
    grid-row: 3;
    grid-column: 3 / 4;
  }

  hr {
    display: none;
  }

  @media (max-width: 900px) {
    .ogor-logo {
      grid-column: 1 / 4;
    }

    .contact {
      grid-row: 3;
      grid-column: 1 / 4;
      justify-content: center;
    }

    .about {
      grid-row: 2;
      grid-column: 1 / 4;
    }

    .more {
      grid-row: 5;
    }

    .legal {
      grid-row: 5;
    }

    .ogor-details {
      grid-row: 5;
      grid-column: 3 / 4;
    }
    hr {
      display: block;
      border: none;
      height: 1px;
      width: 100%;
      border-top: 4px dotted #4BBFEE;
      grid-row: 4;
      grid-column: 1/4;
    }
  }

  @media (max-width: 600px) {
    .inner-footer {
      grid-template-columns: 1fr;
      gap: 2em;
      width: 100%;
      margin: auto;
      gap: 1em;
    }

    .ogor-logo {
      grid-column: 1;
      grid-row: 1;
    }

    .contact {
      grid-column: 1;
      grid-row: 3;
      flex-direction: column;
      text-align: left;
      align-items: flex-start;
      gap: 0;
    }
    .contact a {
      margin-bottom: 1em;
    }

    .social-media {
      display: flex;
      gap: 1em;
    }

    .about {
      grid-column: 1;
      grid-row: 2;
    }
    .about h4 {
      margin-top: 0;
    }

    .more {
      grid-column: 1;
      grid-row: 6;
    }

    .legal {
      text-align: left;
      list-style: disc;
      grid-column: 1;
      grid-row: 7;
    }

    .ogor-details {
      grid-column: 1;
      grid-row: 5;
    }
    .ogor-details address {
      display: flex;
      flex-direction: column;
      flex: 1;
    }
    hr{
      grid-row: 4;
    }
  }
</style>
