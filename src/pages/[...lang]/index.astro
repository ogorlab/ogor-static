  #features {

    @media (min-width: 800px) {
      display: grid;
      grid-template-columns: [left] 1fr [right] 1fr;

      h2 {
        grid-column: 1;
        display: subgrid;
      }
    }

    & section {
      grid-column: 1 / 2;
      display: grid;
      grid-template-columns: subgrid;
      counter-increment: features;

      & ._media {
        grid-column: 2;
      }
    }
    & section h3::before {
      color: brown;
      display: block;
      margin-bottom: 1em;
    }
    & section:nth-of-type(1) h3::before { content: "⏺"; }
    & section:nth-of-type(2) h3::before { content: "⏺ ⏺"; }
    & section:nth-of-type(3) h3::before { content: "⏺ ⏺ ⏺"; }
    & section:nth-of-type(4) h3::before { content: "⏺ ⏺ ⏺ ⏺"; }
    & section h3::before {
      content: counter(features);
    }
  }

  #testimonials {
    background-color: #F6F8F4;
    padding: 2em 2em 4em 2em;
    line-height: 1.5;

    .carousel-container { position: relative; }

    .carousel {
      /* Gap must be in px for carousel to work properly */
      gap: 32px;
      padding: 2em 0;
      transition: transform 0.3s ease-in-out;
      position: relative;

      .card {
        min-height: 7em;
        min-width: calc(100% - 3em);
        background-color: white;
        padding: 1.5em;
        border-radius: 8px;
        box-shadow: 0px 4px 16px 0px rgba(0, 0, 0, 0.25);

        blockquote {
          display: flex; 
          flex-direction: column;
          height: 100%; 
          margin: 0;
          cite{font-size: 16px}
        }

        p { margin: 0; flex: 1; max-width: 40ch; margin-bottom: 1em; }
      }
    }

    .buttons-container {
      position: absolute;
      background-color: white;
      bottom: -10%;
      box-shadow: 0px 4px 8px 0px rgba(0, 0, 0, 0.25);
      border-radius: 8px;
      overflow: hidden;
      right: 50%;
      transform: translateX(50%);

      button {
        border: none;
        margin: 0;
        padding: 0.25em 0.5em;
        background-color: transparent;
        transition: all 0.1s;

        &:hover { background-color: #F6F8F4; }
        &:disabled { background-color: inherit; }
      }
    }

    @media (min-width: 800px) {
      padding: 2em 2em 4em 2em;

      .carousel .card { min-width: calc(50% - 74px); }
    }

    @media (min-width: 1200px) {
      padding: 2em var(--bleed) 4em var(--bleed);
      .testimonials-inner { margin: 0 2em; }

      .carousel .card { min-width: calc(50% - 88px); }

      .buttons-container {
        display: flex;
        bottom: 100%;
        right: 0;
        transform: translateX(0);
      }
    }
  }

  #cta {
    --paper: #FFF0C6;
    padding: 2em;
    text-align: center;
    background: #FFF0C6;

    & p {
      margin-inline: auto;
      max-width: 40em;
    }

    .btn-text {
      --bg: var(--action-bg);
    }

    .btn-black { padding-inline: 1em; }
    .btn-black .icon {
      width: 1.5em;
      height: 1.5em;
      margin: -.25em;
      margin-inline-end: -.125em;
    }

    .assurances {
      max-width: var(--container);
      margin-inline: auto;
      font-stretch: semi-condensed;
      
      @media (min-width: 40rem) {
        display: flex;
        gap: 1em;
        flex-direction: row;
      }
    }
    .decoration {
      align-self: center;
      color: hsla(197, 83%, 61%, 1);
    }
  }

  #partners {
    background-color: #000;
    color: white;
    text-align: center;
    padding: 2em;
    & p {
      display: inline-block;
      max-width: calc(var(--container) / 2);
      width: 45%;
      min-width: fit-content;
      vertical-align: top;
    }
    img {
      vertical-align: middle;
    }
    strong {
      display: inline-block;
      margin-bottom: 1em;
    }
  }
</style>
