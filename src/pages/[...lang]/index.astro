<script>
  const [cards, leftButton, rightButton, carousel] = [
    document.querySelectorAll('.card'),
    document.querySelector('.left') as HTMLButtonElement,
    document.querySelector('.right') as HTMLButtonElement,
    document.querySelector('.carousel') as HTMLElement
  ];
  const gap = 32;
  let currentCardIndex = 0;
  let cardWidth = cards[0].getBoundingClientRect().width;
  let maxCardOffset = 1;

  const updateMaxCardOffset = () => {
    maxCardOffset = window.innerWidth > 800 ? 2 : 1;
    if (window.innerWidth > 800 && currentCardIndex >= cards.length - 1) {
      currentCardIndex = cards.length - 2;
    }
  };
  const updateButtons = () => {
    leftButton.disabled = currentCardIndex <= 0;
    rightButton.disabled = currentCardIndex >= cards.length - maxCardOffset;
  };
  const updateCarousel = (direction: string) => {
    currentCardIndex += direction === 'left' ? -1 : 1;
    carousel.style.transform = `translateX(${-(cardWidth + gap) * currentCardIndex}px)`;
    updateButtons();
  };

  window.onload = () => {
    updateMaxCardOffset();
    updateButtons();
  };
  window.addEventListener('resize', () => {
    cardWidth = cards[0].getBoundingClientRect().width;
    carousel.style.transform = `translateX(${-(cardWidth + gap) * currentCardIndex}px)`;
    updateMaxCardOffset();
    updateButtons();
  });

  leftButton?.addEventListener('click', () => currentCardIndex > 0 && updateCarousel('left'));
  rightButton?.addEventListener('click', () => currentCardIndex < cards.length - maxCardOffset && updateCarousel('right'));
</script>

<style>
  #hero {
    background-color: var(--brand-yellow-6);

    /* Layout */
    ._body   { grid-area: body; }
    ._media1 { grid-area: media1;}
    ._media2 { grid-area: media2;}
