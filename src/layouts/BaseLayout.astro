---
import { ViewTransitions } from 'astro:transitions';
import NavbarAnonymous from "@/components/NavbarAnonymous.astro"
import Footer from "@/components/Footer.astro"
import "@/styles/global.css"
import "@/styles/utils.css"
import config from "astro.config.mjs"
import { getUrl } from "@/i18n"

const { title, key } = Astro.locals;

// console.log(Astro.props)
// console.log(Astro.self)
console.log("BaseLayout", Astro.props)
console.log("BaseLayout", Astro.params)
console.log("BaseLayout", key)
// console.log(Astro.url)

// hreflangs.push(
